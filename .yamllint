---
extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length: disable
  truthy: disable
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

ignore: |
  roles/geerlingguy.mysql/
  roles/geerlingguy.nginx/
  redmine/molecule/
  .pre-commit-config.yaml
  .git/
